            },
            {
                url: 'https://eda.ru/images/RecipeOpenGraph/1200x630/spagetti-karbonara-s-petrushkoy_45643_ogimage.jpg',
                title: 'Паста карбонара',
                description: 'Классическая итальянская паста',
                price: 'от 1 350 ₽'
            }
        ];
        
        // Получаем элементы слайдера
        const slider = document.getElementById('slider');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const pageDots = document.getElementById('pageDots');
        const currentPageSpan = document.getElementById('currentPage');
        const totalPagesSpan = document.getElementById('totalPages');
        const firstPageBtn = document.getElementById('firstPage');
        const lastPageBtn = document.getElementById('lastPage');
        
        // Переменные состояния слайдера
        let currentPage = 0;
        let slidesPerView = 3;
        let totalPages = 0;
        
        // Функция инициализации слайдера меню
        function initMenuSlider() {
            updateSlidesPerView();
            totalPages = Math.ceil(menuImages.length / slidesPerView);
            updatePageInfo();
            createMenuSlides();
            createPageDots();
            goToPage(currentPage);
            setupPagerButtons();
        }
        
        // Функция создания слайдов меню
        function createMenuSlides() {
            slider.innerHTML = '';
            
            menuImages.forEach((menuItem, index) => {
                const slide = document.createElement('div');
                slide.className = 'gallery-slide';
                slide.setAttribute('data-index', index);
                
                const menuItemDiv = document.createElement('div');
                menuItemDiv.className = 'menu-item-slider';
                
                const img = document.createElement('img');
                img.src = menuItem.url;
                img.alt = menuItem.title;
                img.className = 'menu-img-slider';
                img.loading = 'lazy';
                
                // Обработчик ошибок загрузки изображения
                img.onerror = function() {
                    this.src = 'https://images.unsplash.com/photo-1578474846511-04ba529f0b88?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80';
                    this.alt = 'Изображение не загружено';
                };
                
                const caption = document.createElement('div');
                caption.className = 'img-caption-slider';
                caption.innerHTML = `<strong>${menuItem.title}</strong><br>${menuItem.description}<br><span style="color: #ffd54f; font-weight: bold;">${menuItem.price}</span>`;
                
                menuItemDiv.appendChild(img);
                menuItemDiv.appendChild(caption);
                slide.appendChild(menuItemDiv);
                slider.appendChild(slide);
            });
        }
        
        // Функция создания точек навигации
        function createPageDots() {
            pageDots.innerHTML = '';
            
            for (let i = 0; i < totalPages; i++) {
                const dot = document.createElement('div');
                dot.className = 'dot';
                
                if (i === currentPage) {
                    dot.classList.add('active');
                }
                
                dot.setAttribute('data-page', i);
                dot.setAttribute('aria-label', `Перейти на страницу ${i + 1}`);
                
                dot.addEventListener('click', function() {
                    const page = parseInt(this.getAttribute('data-page'));
                    goToPage(page);
                });
                
                pageDots.appendChild(dot);
            }
        }
        
        // Функция настройки кнопок пейджера
        function setupPagerButtons() {
            firstPageBtn.addEventListener('click', function() {
                goToPage(0);
            });
            
            lastPageBtn.addEventListener('click', function() {
                goToPage(totalPages - 1);
            });
        }
        
        // Функция перехода на указанную страницу
        function goToPage(page) {
            currentPage = page;
            
            const slideWidth = 100 / slidesPerView;
            const offset = -currentPage * slideWidth * slidesPerView;
            
            slider.style.transform = `translateX(${offset}%)`;
            
            updatePageInfo();
            updateActiveDot();
            updatePagerButtons();
        }
        
        // Функция перехода на следующую страницу (ЦИКЛИЧЕСКАЯ НАВИГАЦИЯ)
        function nextPage() {
            if (currentPage >= totalPages - 1) {
                goToPage(0);
            } else {
                goToPage(currentPage + 1);
            }
        }
        
        // Функция перехода на предыдущую страницу (ЦИКЛИЧЕСКАЯ НАВИГАЦИЯ)
        function prevPage() {
            if (currentPage <= 0) {
                goToPage(totalPages - 1);
            } else {
                goToPage(currentPage - 1);
            }
        }
        
        // Функция обновления информации о страницах
        function updatePageInfo() {
            currentPageSpan.textContent = currentPage + 1;
            totalPagesSpan.textContent = totalPages;
            firstPageBtn.textContent = '1';
            lastPageBtn.textContent = totalPages;
        }
        
        // Функция обновления активной точки
        function updateActiveDot() {
            const dots = document.querySelectorAll('.dot');
            
            dots.forEach((dot, index) => {
                if (index === currentPage) {
                    dot.classList.add('active');
                } else {
                    dot.classList.remove('active');
                }
            });
        }
        
        // Функция обновления кнопок пейджера
        function updatePagerButtons() {
            firstPageBtn.classList.toggle('active', currentPage === 0);
            lastPageBtn.classList.toggle('active', currentPage === totalPages - 1);
            lastPageBtn.textContent = totalPages;
        }
        
        // Функция обновления количества слайдов на экране
        function updateSlidesPerView() {
            const width = window.innerWidth;
            
            if (width >= 992) {
                slidesPerView = 3;
            } else if (width >= 768) {
                slidesPerView = 2;
            } else {
                slidesPerView = 1;
            }
            
            const slides = document.querySelectorAll('.gallery-slide');
            slides.forEach(slide => {
                slide.style.flex = `0 0 ${100 / slidesPerView}%`;
            });
            
            if (menuImages.length > 0) {
                totalPages = Math.ceil(menuImages.length / slidesPerView);
                
                if (currentPage >= totalPages) {
                    currentPage = totalPages - 1;
                }
                
                createPageDots();
                goToPage(currentPage);
            }
        }
        
        // ============================================
        // ВИДЕО-ФОН В ШАПКЕ
        // ============================================
        
        const heroVideo = document.getElementById('heroVideo');
        const playPauseBtn = document.getElementById('playPauseBtn');
        const muteBtn = document.getElementById('muteBtn');
        
        // Управление воспроизведением видео
        playPauseBtn.addEventListener('click', () => {
            if (heroVideo.paused) {
                heroVideo.play();
                playPauseBtn.innerHTML = '<i class="fas fa-pause"></i>';
                playPauseBtn.setAttribute('aria-label', 'Пауза');
            } else {
                heroVideo.pause();
                playPauseBtn.innerHTML = '<i class="fas fa-play"></i>';
                playPauseBtn.setAttribute('aria-label', 'Воспроизвести');
            }
        });
        
        // Управление звуком видео
        muteBtn.addEventListener('click', () => {
            if (heroVideo.muted) {
                heroVideo.muted = false;
                muteBtn.innerHTML = '<i class="fas fa-volume-up"></i>';
                muteBtn.setAttribute('aria-label', 'Выключить звук');
            } else {
                heroVideo.muted = true;
                muteBtn.innerHTML = '<i class="fas fa-volume-mute"></i>';
                muteBtn.setAttribute('aria-label', 'Включить звук');
            }
        });
        
        // Автовоспроизведение при загрузке страницы
        heroVideo.play().catch(e => {
            console.log("Автовоспроизведение заблокировано браузером");
            playPauseBtn.innerHTML = '<i class="fas fa-play"></i>';
            playPauseBtn.setAttribute('aria-label', 'Воспроизвести');
        });
        
        // ============================================
        // ОРИГИНАЛЬНЫЙ КОД РЕСТОРАНА
        // ============================================
        
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navMenu = document.getElementById('navMenu');
        
        mobileMenuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            mobileMenuBtn.innerHTML = navMenu.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });
        
        // Close menu when clicking on a link
        document.querySelectorAll('#navMenu a').forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });
        
        // Cost Calculator Logic
        const guestsSlider = document.getElementById('guests');
        const guestsValue = document.getElementById('guestsValue');
        const menuType = document.getElementById('menuType');
        const alcohol = document.getElementById('alcohol');
        const decorations = document.getElementById('decorations');
        const totalPrice = document.getElementById('totalPrice');
        const bookBtn = document.getElementById('bookBtn');
        
        // Menu prices per person
        const menuPrices = {
            standard: 2500,
            premium: 4500,
            luxury: 7000
        };
        
        // Alcohol prices per person
        const alcoholPrices = {
            none: 0,
            standard: 1500,
            premium: 3000
        };
        
        // Decoration fixed prices
        const decorationPrices = {
            basic: 0,
            standard: 5000,
            premium: 15000
        };
        
        function calculateTotal() {
            const guests = parseInt(guestsSlider.value);
            const menuPrice = menuPrices[menuType.value];
            const alcoholPrice = alcoholPrices[alcohol.value];
            const decorationPrice = decorationPrices[decorations.value];
            
            // Calculate total: (menu + alcohol) * guests + decoration
            const total = (menuPrice + alcoholPrice) * guests + decorationPrice;
            
            // Format number with spaces as thousands separator
            const formattedTotal = total.toLocaleString('ru-RU');
            
            // Update display
            guestsValue.textContent = `${guests} человек`;
            totalPrice.textContent = `${formattedTotal} ₽`;
        }
        
        // Add event listeners to all calculator inputs
        guestsSlider.addEventListener('input', calculateTotal);
        menuType.addEventListener('change', calculateTotal);
        alcohol.addEventListener('change', calculateTotal);
        decorations.addEventListener('change', calculateTotal);
        
        // Book button click handler
        bookBtn.addEventListener('click', () => {
            alert(`Спасибо! Ваша заявка на банкет на ${guestsSlider.value} человек сформирована. Итоговая стоимость: ${totalPrice.textContent}. Наш менеджер свяжется с вами для подтверждения.`);
        });
        
        // Form submission handler
        const reservationForm = document.getElementById('reservationForm');
        
        reservationForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Get form values
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const date = document.getElementById('date').value;
            const guests = document.getElementById('guestsForm').value;
            
            // In a real application, you would send this data to a server
            // For this example, we'll just show an alert
            alert(`Спасибо, ${name}! Ваша заявка на бронирование столика на ${guests} гостей ${date} принята. Мы свяжемся с вами по телефону ${phone} для подтверждения.`);
            
            // Reset form
            reservationForm.reset();
        });
        
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Обработчики для слайдера меню
        prevBtn.addEventListener('click', prevPage);
        nextBtn.addEventListener('click', nextPage);
        
        // Обработчик изменения размера окна для адаптивности слайдера
        window.addEventListener('resize', function() {
            clearTimeout(this.resizeTimer);
            this.resizeTimer = setTimeout(() => {
                updateSlidesPerView();
            }, 250);
        });
        
        // Обработчики для клавиатурной навигации слайдера
        document.addEventListener('keydown', function(event) {
            if (event.key === 'ArrowLeft') {
                event.preventDefault();
                prevPage();
            }
            
            if (event.key === 'ArrowRight') {
                event.preventDefault();
                nextPage();
            }
            
            if (event.key === 'Home') {
                event.preventDefault();
                goToPage(0);
            }
            
            if (event.key === 'End') {
                event.preventDefault();
                goToPage(totalPages - 1);
            }
        });
        
        // ============================================
        // ИНИЦИАЛИЗАЦИЯ ПРИ ЗАГРУЗКЕ СТРАНИЦЫ
        // ============================================
        
        // Инициализация слайдера меню
        initMenuSlider();
        
        // Инициализация калькулятора
        calculateTotal();
    </script>
</body>
</html>
